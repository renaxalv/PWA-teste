  <script>
    // Anima√ß√£o no bot√£o
    const btn = document.getElementById('actionBtn');
    btn.addEventListener('click', () => {
      btn.textContent = 'Carregando...';
      btn.style.background = 'var(--secondary)';
      
      // Chamada ao Apps Script
      fetch('https://script.google.com/macros/s/AKfycbwWUnKjT8LxKmsd3V7NKUKt-AQzbjfcrHMqAtunDC7cryd28k-1hF4_EUecBDAo7bChZg/exec')
        .then(response => response.json())
        .then(data => {
          btn.textContent = 'Sucesso!';
          btn.style.background = 'var(--accent)';
          
          // Efeito de confete visual
          for (let i = 0; i < 20; i++) {
            createConfetti();
          }
          
          setTimeout(() => {
            btn.textContent = 'Experimente';
            btn.style.background = 'var(--primary)';
          }, 2000);
        })
        .catch(error => {
          console.error('Erro:', error);
          btn.textContent = 'Erro :(';
          btn.style.background = 'var(--accent)';
        });
    });
    
    function createConfetti() {
      const confetti = document.createElement('div');
      confetti.innerHTML = ['üéâ', '‚ú®', 'üåü', 'üí´'][Math.floor(Math.random() * 4)];
      confetti.style.position = 'absolute';
      confetti.style.left = Math.random() * 100 + 'vw';
      confetti.style.top = '-20px';
      confetti.style.fontSize = (Math.random() * 20 + 10) + 'px';
      confetti.style.opacity = Math.random();
      confetti.style.animation = `fall ${Math.random() * 3 + 2}s linear forwards`;
      
      document.body.appendChild(confetti);
      
      setTimeout(() => {
        confetti.remove();
      }, 3000);
    }
    
    // Adiciona estilos din√¢micos para a anima√ß√£o de confete
    const style = document.createElement('style');
    style.textContent = `
      @keyframes fall {
        to {
          transform: translateY(100vh) rotate(360deg);
          opacity: 0;
        }
      }
    `;
    document.head.appendChild(style);
  </script>
